{
    "name": "theme-customizer",
    "version": "2.0.0",
    "description": "Theme customization plugin with dark/light mode support",
    "author": "Customer Portal Team",
    "enabled": true,
    "service_provider": "Plugins\\ThemeCustomizer\\ThemeCustomizerServiceProvider",
    "dependencies": [],
    "requires": {
        "php": ">=8.0",
        "laravel": ">=10.0"
    },
    "autoload": {
        "psr-4": {
            "Plugins\\ThemeCustomizer\\": "src/"
        }
    },
    "config": {
        "primary_color": "#007bff",
        "secondary_color": "#6c757d",
        "custom_logo_url": "",
        "custom_css_enabled": true,
        "footer_text": "Powered by Your Company",
        "show_custom_header": true,
        "dark_mode_enabled": true,
        "dark_mode_default": false
    },
    "permissions": [],
    "hooks": [
        "content.render",
        "menu.items"
    ]
}
